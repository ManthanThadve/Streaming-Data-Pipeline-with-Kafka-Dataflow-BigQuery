<configuration>

    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.kafka" level="WARN"/><logger name="org.apache.beam" level="INFO" />  <logger name="mt.netflix.dataplatform" level="DEBUG" />  </configuration>
